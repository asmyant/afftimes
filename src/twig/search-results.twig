{% extends 'templates/page.twig' %}

{# Заголовок #}
{% block pageTitle %}Результаты поиска{% endblock %}

{# Хлебные крошки #}
{% block pageBreadcrumbs %}
    {% include 'components/breadcrumb.twig' with {
        crumbs: [
            { name: 'Что бы вы сделали, если бы остались единственным выжившим в авиакатастрофе?' },
        ]
    } %}
{% endblock %}

{% block pageContent %}
    <form action="" class="search__form search__form--dark">
        <div class="search__icon is-left">
            {% include 'components/svg.twig' with {id: 'search', width: '20', height: '24'} %}
        </div>
        <label for="search" class="search__label">
            <input class="search__input" type="text" id="search"/>
        </label>
        <button type="submit" class="search__icon is-right">
            {% include 'components/svg.twig' with {id: 'subscribe', width: '20', height: '24'} %}
        </button>
    </form>

    <div class="mt-3">
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 gy-3">
            {% for i in 0..5 %}
                <div class="col">
                    {% include 'components/post/inline.twig' with {search: true} %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
