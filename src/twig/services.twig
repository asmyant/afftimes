{% extends 'templates/page.twig' %}

{# Хлебные крошки #}
{% block pageBreadcrumbs %}
    {% include 'components/breadcrumb.twig' with {
        crumbs: [
            { name: 'Сервисы' },
        ]
    } %}
{% endblock %}

{# Заголовок #}
{% block pageTitle %}Полезные сервисы{% endblock %}

{# Текст страницы #}
{% block pageText %}
    <div class="col-lg-7">
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum volutpat dignissim tellus in. Posuere
            consequat purus dis orci, quisque. Viverra cras at neque mi mauris fermentum. Fringilla ut nisl duis gravida
            lacus. Quam dignissim ac at eleifend imperdiet sagittis gravida tellus.</p>
    </div>
    <div class="col-lg-5">
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum volutpat dignissim tellus in. Posuere
            consequat purus dis orci, quisque. Viverra cras at neque mi mauris fermentum. Fringilla ut nisl duis gravida
            lacus. Quam dignissim ac at eleifend imperdiet sagittis gravida tellus. </p>
    </div>
{% endblock %}


{# Контент #}
{% block pageContent %}
    {% for i in 0..2 %}
        <section class="{{ i == 0 ? '' : "section-archive" }}">
            <div class="section-archive__head">
                <h2 class="h3 mb-3">Креативы</h2>
            </div>

            <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-sm-2 row-cols-1 gy-3">
                {% for i in 0..6 %}
                    <div class="col">
                        {% include 'components/services/type-2.twig' with {
                            text: 'Zeustrack — быстрый трекер, отслеживающий, контролирующий и оптимизирующий ваши рекламные кампании.'
                        } %}
                    </div>
                {% endfor %}

                <div class="col site-page__grid-link">
                    <a href="services-single-archive.html" class="h4 link-purple">
                        Показать больше
                        {% include 'components/svg.twig' with {id: 'arrow-right', width: 22, height: 22} %}
                    </a>
                </div>
            </div>
        </section>
        {% if i == 1 %}
            {% include 'components/banner/horizontal/image.twig' with {class: 'site-page__center-banner'} %}
        {% endif %}
    {% endfor %}

    <div class="align-center mt-4">
        <a class="btn btn--gold-border btn--size-lg" href="services-single-archive.html">Показать еще</a>
    </div>
{% endblock %}
